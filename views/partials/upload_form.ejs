<div id="upload-form-container" class="form-container">   
    <div id="upload-form" class="form">
        <div class="header">
            <p class="title">Upload Image</p>
            <button id="upload-form-close" class=form-close>
                <svg viewBox="0 0 10 10" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" xmlns:serif="http://www.serif.com/" style="fill-rule:evenodd;clip-rule:evenodd;stroke-linejoin:round;stroke-miterlimit:2;">
                    <path d="M5,4.293L0.854,0.146C0.658,-0.049 0.342,-0.049 0.146,0.146C-0.049,0.342 -0.049,0.658 0.146,0.854L4.293,5L0.146,9.146C-0.049,9.342 -0.049,9.658 0.146,9.854C0.342,10.049 0.658,10.049 0.854,9.854L5,5.707L9.146,9.854C9.342,10.049 9.658,10.049 9.854,9.854C10.049,9.658 10.049,9.342 9.854,9.146L5.707,5L9.854,0.854C10.049,0.658 10.049,0.342 9.854,0.146C9.658,-0.049 9.342,-0.049 9.146,0.146L5,4.293Z"/>
                </svg>                                                                                 
            </button>
        </div>
        
        <form action="/u" method="post" enctype="multipart/form-data">

            <% for(var i = 0 ; i < input_err.length ; i++) {%>
                <div class="message-container">
                    <p class="message"><%=input_err[i]%></p>
                </div>
            <%}%>

            <div class="input-container">
                <label for="">Geolocation</label>
                <input type="text" name="geolocation" id="geolocation">
            </div>

            <div class="input-container">
                <label for="">Tags</label>
                <input type="text" name="tags" id="tags">
            </div>

            <div class="input-container">
                <label for="">Captured Date</label>
                <input type="date" name="captured_date" id="">
            </div>

            <div class="input-container">
                <label for="">Captured By</label>
                <input type="text" name="captured_by" id="">
            </div>

            <div class="input-container">
                <div class="file-upload">
                    <p class="file-name">No file selected...</p>
                    <label for="file" class="btn-browse">Browse</label>
                </div>
                <input type="file" name="picture_file" id="file" accept="image/*">
            </div>

            <div class="input-container">
                <button type="submit" class="btn-submit">Submit</button>
            </div>
        </form>
    </div>
</div>